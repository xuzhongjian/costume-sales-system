<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zjxu97.costume.mapper.item.ItemTypeMapper">
    <resultMap id="BaseResultMap" type="com.zjxu97.costume.model.entity.item.ItemType">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="is_deleted" property="isDeleted" jdbcType="TINYINT"/>
        <result column="create_at" property="createAt" jdbcType="TIMESTAMP"/>
        <result column="update_at" property="updateAt" jdbcType="TIMESTAMP"/>
        <result column="sex" property="sex" jdbcType="TINYINT"/>
        <result column="type_name" property="typeName" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="ItemTypeColumn">
        item_type.id, item_type.is_deleted, item_type.create_at, item_type.update_at, item_type.sex, item_type.type_name
    </sql>

    <select id="getItemTypeByItemDetailId" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="ItemTypeColumn"/>
        from
        item_detail
        left join item on item_detail.item_id = item.id
        left join item_type on item.item_type_id = item_type.id
        where item_detail.id = #{item_detail_id}
    </select>
</mapper>